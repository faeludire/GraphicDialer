<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:orientation="vertical"
                                             android:layout_width="match_parent"
                                             android:padding="@dimen/gutter_margin"
                                             android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/iv_profile"
            android:background="@drawable/dummy_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/profile_image_description"
            android:layout_width="50dp"
            android:layout_height="50dp"/>


    <TextView
            android:id="@+id/tv_contact_name"
            android:textSize="@dimen/normal_text_size"
            tools:text="Anonymous Donkey"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/iv_profile"
            android:layout_marginStart="@dimen/inter_view_margin"
            app:layout_constraintTop_toTopOf="@+id/iv_profile"
            android:layout_marginTop="@dimen/small_gap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tv_frequency"
            android:textSize="@dimen/sub_text_size"
            tools:text="12 times"
            app:layout_constraintStart_toStartOf="@+id/tv_contact_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_contact_name"
            android:layout_marginTop="@dimen/small_gap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>